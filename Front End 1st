    <script>
        function updateDateTime() {
            const now = new Date();
            const formattedDateTime = now.toLocaleString();
            document.getElementById('datetime').innerHTML = formattedDateTime;
        }
        setInterval(updateDateTime, 1000);
        updateDateTime();
    </script>   
