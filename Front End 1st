        function changeLanguage() {
            const language = document.getElementById('language-select').value;
            const diseaseContainer = document.getElementById('disease-cards');
            diseaseContainer.innerHTML = '';

            const langContent = content[language];
            Object.keys(langContent).forEach((key) => {
                const diseaseData = langContent[key];
                const card = document.createElement('div');
                card.className = 'disease-card';
                card.innerHTML = `
                    <div class="card-inner">
                        <div class="card-front">
                            <img src="${diseaseData.image}" alt="${diseaseData.front}" />
                            <p>${diseaseData.front}</p>
                        </div>
                        <div class="card-back">
                            <p>${diseaseData.back}</p>
                            <iframe width="100%" height="180" src="${diseaseData.video}" frameborder="0" allow="accelerometer; autoplay; encrypted-media; gyroscope; picture-in-picture" allowfullscreen></iframe>
                        </div>
                    </div>
                `;
                diseaseContainer.appendChild(card);
            });
        }

        changeLanguage();
    </script>
