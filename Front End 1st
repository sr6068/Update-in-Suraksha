  <script>
 window.addEventListener('scroll', () => {
    const chatbot = document.querySelector('.chatbot-container');
    const maxScroll = document.documentElement.scrollHeight - window.innerHeight;
    const scrollPosition = window.scrollY;
    const opacity = Math.min(1, scrollPosition / maxScroll);
    chatbot.style.setProperty('--chatbot-opacity', opacity);
});
const chatbotContainer = document.querySelector('.chatbot-container');
const closeChatButton = document.getElementById('close-chat');
const showChatButton = document.getElementById('show-chat');
showChatButton.style.display = 'none';
closeChatButton.addEventListener('click', () => {
    chatbotContainer.style.display = 'none';
    showChatButton.style.display = 'block';
});
showChatButton.addEventListener('click', () => {
    chatbotContainer.style.display = 'flex';
    showChatButton.style.display = 'none';
});
       </script>
